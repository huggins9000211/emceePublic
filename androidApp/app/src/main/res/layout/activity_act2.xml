<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Select Pool Type"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cbGunite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Guanite"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cbVinyl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Vinyl"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cbHotTub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Hot Tub"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Select Services "
        android:textSize="30sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cbVacume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Vacuum"
        android:textSize="18sp"/>

    <CheckBox
        android:id="@+id/cbBackwash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Backwash"
        android:textSize="18sp"/>

    <CheckBox
        android:id="@+id/cbBrush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Brush"
        android:textSize="18sp"/>

    <CheckBox
        android:id="@+id/cbSand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sand"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/nextButt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="next" />


</LinearLayout>

