<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Act3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Parts used"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="295dp"
            android:gravity="center"
            tools:text="Parts used" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/baskets"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Skimmer Baskets"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/flaps"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Skimmer Flaps"
                android:inputType="number"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/bumpers"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Ladder Bumpers"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/pads"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Fulcrum Pads"
                android:inputType="number"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etC"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Eyeballs c"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etD"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Eyeballs d"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etE"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Eyeballs e"
                android:inputType="number"
                android:textSize="24sp" />

        </LinearLayout>

        <Button
            android:id="@+id/nextButt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="24sp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>