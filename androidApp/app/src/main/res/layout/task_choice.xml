<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.work.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="Please select what task you are doing"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/weeklyButt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weekly Service"
            android:textSize="24sp" />

        <Button
            android:id="@+id/sumButt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Summerizing"
            android:textSize="24sp" />

        <Button
            android:id="@+id/repairButt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Repair form"
            android:textSize="24sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>