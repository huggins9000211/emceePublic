<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Act3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1 - 1/2 inch parts "
            android:textSize="36sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="295dp"
            tools:text="1 - 1/2 inch parts " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Male Adapter"
                android:gravity="center"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="10"
                android:hint="Female Adapter"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/poly"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Poly Adapter"
                android:inputType="number"
                android:gravity="center"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/elbows"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Elbows"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/couplings"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="10"
                android:hint="Couplings"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ts"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="10"
                android:hint="Ts"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/streetels"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="10"
                android:hint="Street Els"
                android:inputType="number"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/valves"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="10"
                android:hint="Valves"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/clamps"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="10"
                android:hint="Clamps"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/unions"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="10"
                android:hint="Unions"
                android:inputType="number"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/nipples"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="10"
                android:hint="Nipples"
                android:inputType="number"
                android:textSize="24sp" />

        </LinearLayout>

        <Button
            android:id="@+id/nextButt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="24sp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>